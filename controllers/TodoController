class ToDoController {
    async create(req, next) {
        try {
            const { title } = req.body;

            res.json(newCardType);
        } catch (err) {
        };
    };

    async getAll (req, res) {
        try {
            return res.json(await Model.getAll())
        } catch (err) {
        };
    };

    async getOne (req, res) {
        try {
            res.json(await Model.get(req.params.cardTypeId))
        } catch (err) {
            next(err)
        };
    }

    async update(req, res) {
        try {
            const { id } = req.params;
            const updatedCardType = await Model.update(cardTypeId);
            res.json(updatedCardType);
        } catch (err) {
            next(err)
        };
    };

    async delete(req, res) {
        try {
            const { id } = req.params;
            const deletedCardType = await Model.deleteCardType(id);
            res.json(deletedCardType);
        } catch (err) {
            next(err)
        };
    };
}

module.exports = new ToDoController()
